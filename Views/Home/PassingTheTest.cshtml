  <body class="u-body u-xl-mode" data-lang="ru">

    <section class="u-align-center u-clearfix u-section-1" id="sec-e832">
         

      <div class="u-clearfix u-sheet u-valign-middle u-sheet-1">

            <form method="post" action="/Home/Calc">
                    <input type="hidden" value="67" required="" data-val="true" data-val-required="The IDTestSistem field is required." id="IDTestSistem" name="IDTestSistem" />


                    @for (int i = 0; i < Model.passingThemes.Count(); i++)
                    {
                    <h2 style="text-align:center">@Model.passingThemes[i].Name</h2>

                    for (int iS = 0; iS < Model.passingThemes[i].testSortsList.Count(); iS++)
                    {
                        switch (Model.passingThemes[i].testSortsList[iS].Type)
                        {
                            case "CloseTest":

                                break;

                            case "OpenTest":

                            var it = Model.passingThemes[i].openPassingsList.Where(x => x.ID == Model.passingThemes[i].testSortsList[iS].IDques).FirstOrDefault();
                                if (it!=null)
                                {
                                    var item = Model.passingThemes[i].openPassingsList.IndexOf(it);
                                <p class="u-form-group u-form-text u-text u-text-1" style="color: #8b680c;">@Model.passingThemes[i].openPassingsList[item].Name</p>

                                <input type="hidden" asp-for="passingThemes[i].openPassingsList[item].ID"    value="@Model.passingThemes[i].openPassingsList[item].ID"  > //Передача id
                                <textarea placeholder="Введите ответ на вопрос" rows="4" cols="50" class="u-border-1 u-border-grey-30 u-input u-input-rectangle u-white" asp-for="passingThemes[i].openPassingsList[item].Text" ></textarea>

                                }
                                

                                    break;

                                case "TableTest":

                                    break;

                            }




                        }
                    }
                        <p class="u-form-group u-form-text u-text u-text-2" style="color: #8b680c;"> Учебная нагрузка<br></p>
                            <div class="u-form-group u-form-radiobutton u-label-none u-form-group-4">
                                <label class="u-label">Радио-кнопки</label>
                                <div class="u-form-radio-button-wrapper" style="margin-bottom: 20px;">

                                        <div class="u-input-row">
                                                <input type="radio" value="3410" checked="checked" data-val="true" data-val-required="The IdAnswer field is required." id="ThemeModels_1__CloseTestModels_0__IdAnswer" name="ThemeModels[1].CloseTestModels[0].IdAnswer">
                                             <label class="u-label" for="radiobutton">слишком легко</label>
                                        </div>
                                        <div class="u-input-row">
                                                <input type="radio" value="3411" id="ThemeModels_1__CloseTestModels_0__IdAnswer" name="ThemeModels[1].CloseTestModels[0].IdAnswer">
                                             <label class="u-label" for="radiobutton">легко</label>
                                        </div>
                                        <div class="u-input-row">
                                                <input type="radio" value="3412" id="ThemeModels_1__CloseTestModels_0__IdAnswer" name="ThemeModels[1].CloseTestModels[0].IdAnswer">
                                             <label class="u-label" for="radiobutton">оптимальная нагрузка</label>
                                        </div>
                                        <div class="u-input-row">
                                                <input type="radio" value="3413" id="ThemeModels_1__CloseTestModels_0__IdAnswer" name="ThemeModels[1].CloseTestModels[0].IdAnswer">
                                             <label class="u-label" for="radiobutton">сложно</label>
                                        </div>
                                        <div class="u-input-row">
                                                <input type="radio" value="3414" id="ThemeModels_1__CloseTestModels_0__IdAnswer" name="ThemeModels[1].CloseTestModels[0].IdAnswer">
                                             <label class="u-label" for="radiobutton">слишком сложно</label>
                                        </div>
                                </div>
                            </div>
            <div class="col-lg-12">
            <button class="u-btn u-btn-submit u-button-style">Отправить ответы</button>
            </div>
    </form>
    </div>
    </section>
  
   
    

  
</body></html>
