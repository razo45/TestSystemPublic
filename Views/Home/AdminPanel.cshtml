                            <div style="Width:100%;padding-left: 0px;padding-right: 0px;margin-bottom: 10px;" class="col-lg-6 ">
                                <span>Выберите курс</span><br/>
                                        <div class="select" style="width: auto;">
                                            <select asp-for="CopyingTestModel.IdTest">
                                                @foreach (var item in Model.listTests)
                                                {
                                                    <option value="@item.ID">@item.Name</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                            
                                    
                                    <span>Введите название нового теста</span><br/>
                            <input asp-for="CopyingTestModel.Name" type="text" style="margin-bottom: 10px" placeholder="Название нового теста" cols="50" class="u-border-1 u-border-grey-30 u-input u-input-rectangle u-white" required=""  />
                             
                            
