                                            <select asp-for="CreateUserModel.IdTest">
                                                @foreach (var item in Model.listTests)
                                                {
                                                    <option value="@item.ID">@item.Name</option>
                                                }
                            
                                                    

                                            </select>
                                        </div>
                                    </div>
                            <span>Введите кол-во пользователей</span><br/>
