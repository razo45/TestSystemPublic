                             <span style="margin-top: 20px">Открытие теста</span><br  />
                            <input asp-for="NewTestModel.DateOpen" type="date" value="@DateTime.Now" style="margin-bottom: 10px" placeholder="Дата открытия" class="u-border-1 u-border-grey-30 u-input u-input-rectangle u-white" required=""  />
                            <span style="margin-top: 20px">Закрытие теста</span><br  />
                            <input asp-for="NewTestModel.DateClose" type="date" value="@DateTime.Now" placeholder="Дата закрытия" class="u-border-1 u-border-grey-30 u-input u-input-rectangle u-white" required=""  />

