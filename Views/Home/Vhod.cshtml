  <title>Вход в профиль</title>
  @model MpdaTest.ViewModels.LoginViewModel;
<div class="u-clearfix u-sheet u-sheet-1">
        <img class="u-image u-image-contain u-image-default u-preserve-proportions u-image-1" src="/NicepageAssets/images/instagram_icon2.png" alt="" data-image-width="1200" data-image-height="1200">
        <h2 style="margin-bottom: 0px;font-weight: 600;text-align: center;padding-bottom: 0px;">Вход в личный кабинет</h2>
        <div class="u-border-2 u-border-grey-30 u-form u-form-1" style="margin-top: 20px;margin-left: auto;margin-right: auto;margin-bottom: 20px;max-width: 776px;">



           
          <form method="post" style="padding: 10px;" asp-controller="Home" asp-action="Login">
             <div asp-validation-summary="ModelOnly"></div>
              <div class="u-form-email u-form-group">

              <h5 for="email-71dc" class="u-custom-font u-label u-text-font">Логин</h5>
              <input type="text" placeholder="Введите Ваш Login" class="u-border-2 u-border-custom-color-4 u-input u-input-rectangle u-white" required="" asp-for="Login" name="Login">
            </div>
            <div class="u-form-group u-form-name" style="margin-top: 10px; margin-bottom: 10px;">
              <h5 for="name-71dc" class="u-custom-font u-label u-text-font">Пароль</h5>
              <input type="password" placeholder="Введите ваш пароль" class="u-border-2 u-border-custom-color-4 u-input u-input-rectangle u-white" required="" asp-for="Password" name="Password">
            </div>
            <h3  style=" font-size: 1rem; margin-left: 10px;margin-top: 10px;margin-bottom: 10px; color: red;">@Model.Mess</h3>
            <div class="u-align-left u-form-group u-form-submit" style="display: flex;flex-direction: row;width: 100%;justify-content: space-between;">
                <button class="u-btn u-btn-submit u-button-style" style="width: 100%;margin-bottom: 0px;margin-top: 0px;">Войти</button>
          </div>
          </form>
        </div>
      </div>